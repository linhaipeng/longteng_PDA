<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp" >


    <ImageView
        android:id="@+id/im_order"
        android:layout_width="50dp"
        android:src="@drawable/im_order"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的订单"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignTop="@+id/im_order"
        android:layout_toEndOf="@+id/im_order" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="时间:2016-11-17 17:09"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/im_order" />
    <TextView
        android:text="记录:11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:id="@+id/tv_items"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tv_time" />
    <ImageView
        android:layout_width="@dimen/view_btn_size"
        android:src="@drawable/ic_next_right"
        android:layout_height="@dimen/view_btn_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>